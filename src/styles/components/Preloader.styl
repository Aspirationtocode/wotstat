.preloader
	border 3px solid transparent
	border-top 3px solid #808156
	border-radius 50%
	margin-left 16px
	width 32px
	height 32px
	animation preloader-rotation .9s infinite
	animation-timing-function linear

@keyframes preloader-rotation
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)
