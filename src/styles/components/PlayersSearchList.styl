.players-search-list
	display flex
	flex-direction column
	margin 0
	@media screen and (min-width: 600px)
		flex-wrap wrap
		flex-direction row
		justify-content space-between
		margin 0 8px
	&__response-number-wrapper
		flex-basis 100%
		padding 12px 16px
		color #95989A
		@media screen and (min-width: 600px)
			padding 12px 8px
	&__response-number
		position relative
		&::before
			content ""
			position absolute
			top 20px
			left 0
			height 1px
			width 100%
			background-color #95989A
